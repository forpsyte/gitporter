{
  "name": "gitporter",
  "version": "1.0.0",
  "description": "A CLI tool to migrate Jira Cloud issues to GitHub issues with AI-powered summaries, full attachment support, and comprehensive retry logic",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "gitporter": "src/cli.js"
  },
  "files": [
    "src/",
    "config.example.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/cli.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ *.md *.json",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "jira",
    "github",
    "migration",
    "cli",
    "issues",
    "atlassian",
    "github-migration",
    "jira-migration",
    "issue-migration",
    "openai",
    "ai-summaries",
    "devops",
    "project-management"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gitporter.git"
  },
  "homepage": "https://github.com/yourusername/gitporter#readme",
  "bugs": {
    "url": "https://github.com/yourusername/gitporter/issues"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "lodash": "^4.17.21",
    "openai": "^4.20.1",
    "ora": "^7.0.1",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
